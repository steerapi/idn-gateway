{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2016",
    "strictNullChecks": true,
    "lib": ["es2017", "dom"],
    "declaration": false,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "watch": false,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./lib/**/*.ts", "./src/**/*.ts"],
  "files": ["src/index.ts"],
  "exclude": ["node_modules", ".idea", "build", "typings"]
}
